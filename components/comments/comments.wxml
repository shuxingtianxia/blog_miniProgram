<!--components/comments/comments.wxml-->
<block wx:if="{{allcomments.length>0?true:false}}">
  <block wx:for="{{allcomments}}" wx:key="index" wx:for-index="allindex">
    <view class="cu-chat">
      <view class="cu-item" bind:tap="clickparentcomments" data-id="{{item._id}}" data-name="{{item.username}}"
        data-userid="{{item.userid}}" data-formId="{{item.formId}}">
        <view class="basis-xs">
          <view class="cu-avatar lg round margin-left-sm" style="background-image:url({{item.userId.avatarUrl}});"></view>
        </view>
        <view class="grid col-1 basis-xl solid-bottom" style="min-height:120rpx;">
          <view class="padding-xs">
            <text class="text-black text-bold">{{item.username}}</text>
            <view class="fr text-xs" style="line-height: 32rpx;">
              <text class="text-grey">{{item.date}}</text>
            </view>
          </view>
          <view class="main">
            <view class="content">
              <text>{{item.content}}</text>
            </view>
          </view>
        </view>
      </view>
      <!--一级回复-->
      <view wx:for="{{item.child}}" wx:for-item="item1" wx:key="itemid1" wx:for-index="idx" data-id="{{item1._id}}" data-name="{{item1.username}}"
        data-userid="{{item1.userid}}" data-formId="{{item1.formId}}">
        <view class="cu-item">
          <view class="basis-xs">
            <view class="cu-avatar lg round margin-left-sm" style="background-image:url({{item1.avatar}});"></view>
          </view>
          <view class="grid col-1 basis-xl solid-bottom" style="min-height:120rpx;">
            <view class="padding-xs">
              <text class="text-black text-bold">{{item1.username}} @ {{item.username}}</text>
              <view class="fr text-xs" style="line-height: 32rpx;">
                <text class="text-grey">{{item1.date}}</text>
              </view>
            </view>
            <view class="main">
              <view class="content">
                <text>{{item1.content}}</text>
              </view>
            </view>
          </view>
        </view>
        <!--二级回复-->

        <view wx:for="{{item1.child}}" wx:for-item="item2" wx:key="itemid2" wx:for-index="idx" data-id="{{item2.id}}"
          data-name="{{item2.username}}" data-userid="{{item2.userid}}" data-formId="{{item2.formId}}">
          <view class="cu-item">
            <view class="basis-xs">
              <view class="cu-avatar lg round margin-left-sm" style="background-image:url({{item2.author_url}});">
              </view>
            </view>
            <view class="grid col-1 basis-xl solid-bottom" style="min-height:120rpx;">
              <view class="padding-xs">
                <text class="text-black text-bold">{{item2.username}} @ {{item1.username}}</text>
                <view class="fr text-xs" style="line-height: 32rpx;">
                  <text class="text-grey">{{item2.date}}</text>
                </view>
              </view>
              <view class="main">
                <view class="content">
                  <text>{{item2.content}}</text>
                </view>
              </view>
            </view>
          </view>
          <!--三级回复-->
          <view wx:for="{{item2.child}}" wx:for-item="item3" wx:key="itemid3" wx:for-index="idx" data-id="{{item3.id}}"
            data-name="{{item3.username}}" data-userid="{{item3.userid}}" data-formId="{{item3.formId}}">
            <view class="cu-item">
              <view class="basis-xs">
                <view class="cu-avatar lg round margin-left-sm" style="background-image:url({{item3.author_url}});">
                </view>
              </view>
              <view class="grid col-1 basis-xl solid-bottom" style="min-height:120rpx;">
                <view class="padding-xs">
                  <text class="text-black text-bold">{{item3.username}} @ {{item2.username}}</text>
                  <view class="fr text-xs" style="line-height: 32rpx;">
                    <text class="text-grey">{{item3.date}}</text>
                  </view>
                </view>
                <view class="main">
                  <view class="content">
                    <text>{{item3.content}}</text>
                  </view>
                </view>
              </view>
            </view>
            <!--四级回复-->

            <view wx:for="{{item3.child}}" wx:key="itemid4" wx:for-index="idx" wx:for-item="item4">
              <view class="cu-item">
                <view class="basis-xs">
                  <view class="cu-avatar lg round margin-left-sm" style="background-image:url({{item4.author_url}});">
                  </view>
                </view>
                <view class="grid col-1 basis-xl solid-bottom" style="min-height:120rpx;">
                  <view class="padding-xs">
                    <text class="text-black text-bold">{{item4.username}} @ {{item3.username}}</text>
                    <view class="fr text-xs" style="line-height: 32rpx;">
                      <text class="text-grey">{{item4.date}}</text>
                    </view>
                  </view>
                  <view class="main">
                    <view class="content">
                      <text>{{item4.content}}</text>
                    </view>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </block>
</block>
<block wx:else>
  <view class="text-center">来抢沙发吧~</view>
</block>